<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name%>
  <%= f.text_field :artist_name %> <br>

  <%= f.label :song_genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %> <br>

  <%= f.label :notes %>
  <%= f.fields_for :notes do |note_field| %>
    <%= note_field.text_field :attributes_0_content %>
    <%= note_field.text_field :attributes_1_content %>
  <% end %>

  <%= f.submit %>
<% end %>


